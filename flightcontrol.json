{
    "$schema": "https://app.flightcontrol.dev/schema.json",
    "environments": [
        {
            "id": "production",
            "name": "Production",
            "region": "us-east-1",
            "source": {
                "branch": "main"
            },
            "services": [
                {
                    "id": "deno-solid-server",
                    "name": "Deno Solid Server",
                    "type": "web",
                    "target": {
                        "type": "fargate"
                    },
                    "cpu": 0.5,
                    "memory": 1,
                    "buildType": "docker",
                    "dockerfilePath": "Dockerfile",
                    "dockerContext": ".",
                    "healthCheckPath": "/",
                    "port": 8000
                }
            ]
        }
    ]
}